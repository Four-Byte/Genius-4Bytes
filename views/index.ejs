<!DOCTYPE html>
<html lang="en">
<head>
 
    <title>Movies</title>
    <!-- <link rel="stylesheet" href="../styles/reset.css"> -->
    <link rel="stylesheet" href="../styles/base.css">
    <link rel="stylesheet" href="../styles/module.css">
    <link rel="stylesheet" href="../styles/layout.css">


</head>
<body>
    <h1>Genius 4-Bytes Movies App </h1>

    <!-- <img id="logoimage" src="../styles/images/Genius-bytes-logo.jpg" alt="logoimage"> -->
    <nav>
      <ul class="navigation">
          <li class="nav">
              <a href="/" id="currentlink"> Home Page</a>
          </li>
          <li class="nav">
              <a href="/search">Search Page </a>
          </li>
          <li class="nav">
              <a href="/show"> Favorite Movies</a>
          </li>
          <li class="nav">
              <a href="About-Us.html">About Us </a>
          </li>
      </ul>
  </nav>

  <div id="buttons">
    <nav>
      <form action="/search">
        <button id="searchbutton">Search API Movies</button>
      </form>
      <form action="/show">
        <button id="favbutton">The favorite list </button>
      </form>
    </nav>
  </div>
    

  <div class="topratedmovies">

    <h2> Top Rated Movies </h2>
    <%  data.forEach((val)=>{ %>
        <div> <ul><li>
        <p> <%= val.title %> </p>
        <p> <img src="<%= val.poster_path %>" > </p>
        <p> <%= val.overview %> </p>
        <p><%= val.popularity %> </p>
        <p> <%= val.vote_average %> </p>
        <p> <%= val.release_date%></p>
    </li></ul></div>
   
    <% })    %>

  </div>
 
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="app.js"></script>
</body>
</html>